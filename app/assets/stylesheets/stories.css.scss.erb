@import url(https://fonts.googleapis.com/css?family=Shadows+Into+Light+Two);
@import url(https://fonts.googleapis.com/css?family=Merienda);

@-webkit-keyframes pulse_animation {
	0% { -webkit-transform: scale(1); }
	30% { -webkit-transform: scale(1); }
	40% { -webkit-transform: scale(1.08); }
	50% { -webkit-transform: scale(1); }
	60% { -webkit-transform: scale(1); }
	70% { -webkit-transform: scale(1.05); }
	80% { -webkit-transform: scale(1); }
	100% { -webkit-transform: scale(1); }
}

textarea#story_title {
	font-size: 52px;
	border: none;
	width: 100%;
}

textarea:focus {
	border:none !important;
	outline: none !important;
}

textarea#story_lesson {
font-family: "ff-tisa-web-pro",Georgia,Cambria,"Times New Roman",Times,serif;
border: none;
width: 100%;
font-weight: 400;
font-style: italic;
margin: 0px 0;
line-height: 1.2;
font-size: 1.5em;
-webkit-margin-before: 0.83em;
-webkit-margin-after: 0.83em;
-webkit-margin-start: 0px;
-webkit-margin-end: 0px;
}

textarea#story_characters {
	font-family: "ff-tisa-web-pro",Georgia,Cambria,"Times New Roman",Times,serif;
	border: none;
	width: 100%;
	font-weight: 200;
	line-height: 1;
	font-size: 1.2em;
	margin: 0px 0;
	-webkit-margin-before: 0.83em;
	-webkit-margin-after: 0.83em;
	-webkit-margin-start: 0px;
	-webkit-margin-end: 0px;
}

textarea#story_body {
	font-family: 'Open Sans', sans-serif;
	font-size: 1.5em;
}

.hoverMask{
	-webkit-border-radius:3px;
	-moz-border-radius:3px;-ms-border-radius:3px;-o-border-radius:3px;border-radius:3px;-webkit-box-shadow:0 0 3px rgba(0,0,0,0.33) inset;
	-moz-box-shadow:0 0 3px rgba(0,0,0,0.33) inset;box-shadow:0 0 3px rgba(0,0,0,0.33) inset;bottom:0;left:0;position:absolute;right:0;top:0;
	z-index:99}

.storyCoverWrapper:hover .hoverMask{background:rgba(255,255,255,0.1)}


.storyCoverWrapper{position:relative;overflow:hidden;clear:both;height:300px;width:350px}

.story-title {
	width: 100%;
	color: white;
	padding-left: 10px;
	padding-right: 10px;
	text-shadow: 1px 1px 1px black;
}
.storyCoverTitle {
	position: absolute;
	z-index: 10;
	text-align: left;
	width: 350px;

}

div.storyphotowrapper input {
  display: inline-block !important;
	cursor: pointer;
	position: relative;
	top: -20px;
}

div.storyphotowrapper {
  width: 200px;
	height: 90px;
  overflow: hidden;
  text-decoration: inherit;
	display: inline;
	speak: none;
	font-family: FontAwesome;
	font-weight: normal;
	font-style: normal;
	text-decoration: inherit;
	-webkit-font-smoothing: antialiased;
	cursor: pointer;
	color: #dededc;
}

div.storyphotowrapper i {
	font-size: 5em;
}

.storyphotowrapper:hover {
	cursor: pointer;
	color: #5cb85c;
}

.story-content-inner {
	padding-top: 10px;
}

.socialshare .facebook {
	float: right;
	font-size: 1.5em;
	
}

.socialshare .twitter {
	float: right;
	font-size: 1.5em;
	padding-right: 1em;
}

blockquote {
	border-left: 5px solid #63B559 !important;
	font-style:italic;
}

.storypreview {
	font-style:italic;
	color: #777777;
}

.storywrapper {
	border-bottom: 1px solid #dedede;
	padding-bottom: 20px;
}