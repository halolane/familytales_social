<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="fields">
    <label class="control-label" for="user_name">Name</label>
    <div class="controls">
      <%= f.text_field :name, :class => "new_user_field"%>
    </div>
  </fieldset>

  <fieldset class="fields">
    <label class="control-label" for="user_name">Twitter Username</label>
    <div class="controls">
      <%= f.text_field :username, :class => "new_user_field"%>
    </div>
  </fieldset>

  <fieldset class="fields">
    <label class="control-label" for="user_name">Bio</label>
    <div class="controls">
      <%= f.text_area :bio, :class => "new_user_field input-xlarge"%>
    </div>
  </fieldset>

  <div class="actions">
  	<div class="controls ">
    <%= f.submit "Save Changes", :class => "btn btn-small btn-primary green_button save-changes-button" %>
    </div>
  </div>

<% end %>
