<% provide(:title, "Editing Story") %>
<div class="container" >
  <div class="row">
    <div class="col-md-12">
<%= render 'form' %>
    </div>
  </div>
</div>

<script type="text/javascript">
             tinymce.init({
                selector: "textarea#story_body",
                theme: "modern",
                plugins: [
                    ["autolink link image charmap preview hr anchor spellchecker"],
                    ["wordcount insertdatetime media"],
                    ["save contextmenu directionality paste"]
                ],
                add_unload_trigger: false,
                schema: "html5",
                toolbar: "undo redo | bold italic | formatselect | link image ",
                statusbar: false,
                menubar: false
            });
        </script>