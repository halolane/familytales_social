<% provide(:title, @story.title) %>
    <div class="col-md-2 story-author-side">
    <div class="story-author-card">
		    <a href="/@luckyshirt" class="story-author-image" data-action="stat-link" data-action-value="story-discovery.author.image" title="Go to the profile of Lucky Shirt">
		    <%= gravatar_for @storyauthor %></a>
		    <div class="story-author-info"><a href="/@luckyshirt" data-id="496727088aa3" title="Go to the profile of Lucky Shirt" rel="author" class="story-author-name" data-action="stat-link" data-action-value="story-discovery.author.name"><%= @storyauthor.name %></a>
		    <p>
		    	<%= @storyauthor.bio %>
		    </p>

		    </div>
	    </div>
    </div>
    <div class="col-md-8">
      <h1 class="heading"><strong><%= @story.title %></strong></h1>
       <h3 class="subtitle"><em><%= @story.subtitle %></em></h3>
      <h5><span class="name">ALI RUSHDAN TARIQ</span> <span class="text-muted"> | <%= @story.created_at.strftime("%b %d, %Y") %></span></h5></span>
    </div>
    <div class="col-md-8">
      <img src="http://placehold.it/900x350" class="img-rounded img-responsive">
    </div>
		<div class="col-md-8 col-md-offset-2 articletext">
			<%= @story.body.html_safe %>

			<%= render 'layouts/footer' %>
		</div>

	

